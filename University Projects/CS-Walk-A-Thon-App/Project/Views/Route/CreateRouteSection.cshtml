@model Project.Models.RouteSection

@{
    /**/

    ViewBag.Title = "CreateRouteSection";
}

<h2>Create Route Sections for @ViewBag.routeName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>RouteSection</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @* HIDDEN VALUES USED TO STORE THINGS NOT TO BE CHANGED BY USER *@

        @Html.HiddenFor(model => model.routeID)

        <div class="form-group">
            @Html.LabelFor(model => model.sectionStart, "Section Start", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sectionStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sectionStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sectionEnd, "Section End", htmlAttributes: new { @class = "control-label col-md-2" })
