@model IEnumerable<Project.Models.PointOfInterest>

@{
    ViewBag.Title = "ViewPOI";
}

<h2>ViewPOI</h2>

<p>
    @Html.ActionLink("Create New", "CreatePOI")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.POI_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.POI_Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.POI_Picture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.POI_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POI_Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POI_Picture)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPOI", new { id=item.POI_ID })
        </td>
    </tr>
}

</table>
